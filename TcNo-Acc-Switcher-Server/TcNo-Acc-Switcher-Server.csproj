<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>TcNo_Acc_Switcher_Server</RootNamespace>
    <ApplicationIcon>wwwroot\favicon.ico</ApplicationIcon>
    <Version>4.0.0</Version>
    <Authors>TechNobo (Wesley Pyburn)</Authors>
    <Product>TcNo Account Switcher - Server</Product>
    <Copyright>Copyright © TechNobo (Wesley Pyburn) 2020</Copyright>
    <PackageProjectUrl>https://github.com/TcNobo/TcNo-Acc-Switcher</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TcNobo/TcNo-Acc-Switcher</RepositoryUrl>
    <AssemblyName>TcNo-Acc-Switcher-Server</AssemblyName>
    <Company>TechNobo (Wesley Pyburn)</Company>
    <Description>Server for the TcNo Account Switcher (Blazor backend)</Description>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Resources\af-ZA.yml" />
    <None Remove="Resources\en-UK.yml" />
    <None Remove="TcNoAccSw-Icon-100x100.png" />
    <None Remove="themes\Default.yaml" />
    <None Remove="themes\Dracula_Cyan.yaml" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="themes\Default.yaml" />
    <Content Include="themes\Dracula_Cyan.yaml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\af-ZA.yml" />
    <EmbeddedResource Include="Resources\en-UK.yml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AKSoftware.Localization.MultiLanguages" Version="5.1.0" />
    <PackageReference Include="AKSoftware.Localization.MultiLanguages.Blazor" Version="1.0.0" />
    <PackageReference Include="Gameloop.Vdf" Version="0.6.1" />
    <PackageReference Include="Gameloop.Vdf.JsonConverter" Version="0.2.1" />
    <PackageReference Include="HtmlAgilityPack" Version="1.11.34" />
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="7.24.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Svg.Skia" Version="0.5.6.1" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
    <PackageReference Include="TaskScheduler" Version="2.9.1" />
    <PackageReference Include="YamlDotNet" Version="11.1.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\TcNo-Acc-Switcher-Globals\TcNo-Acc-Switcher-Globals.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="TcNoAccSw-Icon-100x100.png" />
    <Resource Include="wwwroot\img\TcNo_Logo_Flat.svg" />
  </ItemGroup>
  <ItemGroup>
    <Content Update="wwwroot\**\*.*">
		<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <DeploymentContent>true</DeploymentContent>
    </Content>
    <Content Update="themes\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <DeploymentContent>true</DeploymentContent>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <None Update="Additional Licenses.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="wwwroot\css\font\" />
  </ItemGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <TypeScriptTarget>ES11</TypeScriptTarget>
    <TypeScriptJSXEmit>React</TypeScriptJSXEmit>
    <TypeScriptModuleKind>AMD</TypeScriptModuleKind>
    <TypeScriptCompileOnSaveEnabled>True</TypeScriptCompileOnSaveEnabled>
    <TypeScriptNoImplicitAny>False</TypeScriptNoImplicitAny>
    <TypeScriptRemoveComments>False</TypeScriptRemoveComments>
    <TypeScriptOutFile />
    <TypeScriptOutDir />
    <TypeScriptGeneratesDeclarations>False</TypeScriptGeneratesDeclarations>
    <TypeScriptNoEmitOnError>True</TypeScriptNoEmitOnError>
    <TypeScriptSourceMap>True</TypeScriptSourceMap>
    <TypeScriptMapRoot />
    <TypeScriptSourceRoot />
  </PropertyGroup>
</Project>