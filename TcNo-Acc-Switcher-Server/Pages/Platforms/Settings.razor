@page "/Platforms/"
@using TcNo_Acc_Switcher_Server.Data
@using TcNo_Acc_Switcher_Globals
@namespace TcNo_Acc_Switcher_Server.Pages.Platforms
@inject NavigationManager NavManager
@inject IAppData AppData
@inject IAppSettings AppSettings
@inject IAppStats AppStats
@inject ILang Lang

<div class="container mainblock">
    <div class="row">
        <div class="col-md-12 col-lg-9 col-xl-8 mx-auto settingsCol">
            <toastarea class="toastarea" />

            @if (AppSettings.Platforms.All(x => !x.Enabled))
            {
                <span>@Lang["Settings_NoPlatforms"]</span>

                <div class="SettingsHeader mt-4"> <!-- I couldn't just include the opening tag here, so copy/paste everything... -->
                    <hr><span>@Lang["Settings_Header_ExtraPlatforms"]</span>
                    <hr>
                </div>
            }
            else
            {
                <h2 class="SettingsHeader">@Lang["Settings_Header_ExtraPlatforms"]</h2>
            }

            @if (AppSettings.Platforms.Any(x => !x.Enabled))
            {
                <h2 class="SettingsHeader">@Lang["Settings_ExtraPlatformsDisabled"]</h2>

                <div class="rowSetting">
                    @foreach (var item in AppSettings.Platforms.Where(x => !x.Enabled))
                    {
                        <div class="form-check mb-2"><input class="form-check-input" type="checkbox" id="@item.SafeName" @onclick="() => ShowPlatform(item, true)"><label class="form-check-label" for="@item.SafeName"></label><label for="@item.SafeName">@item.Name<br></label></div>
                    }
                </div>
            }

            @if (AppSettings.Platforms.Any(x => x.Enabled)) {
                <div class="SettingsHeader mt-2">
                    <p>@Lang["Settings_ExtraPlatformsEnabled"]</p>
                </div>

                <div class="rowSetting">
                    @foreach (var item in AppSettings.Platforms.Where(x => x.Enabled))
                    {
                        <div class="form-check mb-2"><input class="form-check-input" type="checkbox" id="@item.SafeName" checked @onclick="() => ShowPlatform(item, false)"><label class="form-check-label" for="@item.SafeName"></label><label for="@item.SafeName">@item.Name<br></label></div>
                    }
                </div>

                <div class="buttoncol col_close"><button class="btn_close" type="button" @onclick="SaveAndClose"><span>@Lang["Button_Close"]</span></button></div>
            }
        </div>
    </div>
</div>
<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppData.WindowTitle = Lang["Title_Platforms_Settings"];
        Globals.DebugWriteLine(@"[Auto:Platforms\Settings.razor.cs.OnInitializedAsync]");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        AppStats.NewNavigation("/Platforms/");
        AppSettings.Platforms.CollectionChanged += (_, _) => InvokeAsync(StateHasChanged);
    }

    public void SaveAndClose()
    {
        var i1 = AppSettings.Platforms;
        AppSettings.SaveSettings();
        var i2 = AppSettings.Platforms;
        NavManager.NavigateTo("/");
    }



    /// <summary>
    /// Show a platform. This is only called from the platforms list.
    /// </summary>
    public void ShowPlatform(AppSettings.PlatformItem pI, bool enabled)
    {
        pI.SetEnabled(enabled);
        AppSettings.SaveSettings();
    }
}
