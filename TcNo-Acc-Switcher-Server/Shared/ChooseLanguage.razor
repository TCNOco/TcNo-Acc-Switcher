@using TcNo_Acc_Switcher_Server.Pages.General
@using System.Globalization
@using TcNo_Acc_Switcher_Server.State
@using TcNo_Acc_Switcher_Server.State.Interfaces
@inject NavigationManager NavigationManager
@inject IWindowSettings WindowSettings
@inject ILang Lang
@inject IModals Modals

@if (_cultures != null)
{
	<span>@Lang["Header_ChooseLanguage"]</span>
	<div class="dropdown">
		<ul class="custom-dropdown-menu dropdown-menu">
			@foreach (var (key, value) in _cultures)
			{
				<li class="custom-dropdown-item dropdown-item" @onclick="() => RequestCultureChange(value)">@value - @key</li>
			}
		</ul>
		<button class="dropdown-toggle" type="button" data-toggle="dropdown">
			@_selectedCulture
			<span class="caret"></span>
		</button>
		&nbsp;<a class="fancyLink" @onclick='() => { StaticFuncs.OpenLinkInBrowser("https://crowdin.com/project/tcno-account-switcher"); }'>@Lang["Settings_HelpTranslate"]</a>
		&nbsp;<a class="fancyLink" @onclick='() => Modals.ShowModal("crowdin")'>@Lang["Settings_ViewTranslators"]</a>
	</div>
}

@code {
	private string _selectedCulture;
	private Dictionary<string, string> _cultures;

	protected override void OnInitialized()
	{
	    OnChange();
	}

	private void RequestCultureChange(string key)
	{
		if (string.IsNullOrWhiteSpace(key)) return;
	    Lang.LoadLang(key);
	    WindowSettings.Rtl = new CultureInfo(Lang.Current).TextInfo.IsRightToLeft;
	    NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
	    OnChange();
	}

    private void OnChange() {
        _selectedCulture = Lang.GetCurrentLanguage().Key;
        _cultures = Lang.GetAvailableLanguagesDict();

    }
}