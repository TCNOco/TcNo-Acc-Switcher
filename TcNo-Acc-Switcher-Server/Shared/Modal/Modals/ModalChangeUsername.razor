@using TcNo_Acc_Switcher_Server.Shared.Modal
@using TcNo_Acc_Switcher_Server.Data
@using TcNo_Acc_Switcher_Globals
@using TcNo_Acc_Switcher_Server.Data.Settings
@using TcNo_Acc_Switcher_Server.Pages.General
@using Newtonsoft.Json
@using System.IO
@using System.Text.RegularExpressions
@using TcNo_Acc_Switcher_Server.Pages.Basic
@using TcNo_Acc_Switcher_Server.Pages.Steam
@code {

    protected override void OnInitialized()
    {
        ModalData.Title = Lang.Instance["Modal_Title_ChangeUsername", new { accountName = AppData.SelectedAccount.DisplayName }];
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await AppData.InvokeVoidAsync("focusOn", "#NewAccountName");
    }
}

<div>
    <span class="modal-text">@Lang.Instance["Modal_ChangeUsername", new { platform = AppData.CurrentSwitcher }].</span>
</div>
<div class="inputAndButton">
    <input type="text" id="NewAccountName" style="width: 100%;padding: 8px;" autocomplete="off" @bind="AppData.SelectedAccount.DisplayName" @onkeyup="KeyPress">
</div>
<div class="settingsCol inputAndButton">
    @if (AppData.CurrentSwitcher != "Steam")
    {
        @CurrentPlatform.GetUserModalExtraButtons
    }
    <button class="modalOK" type="button" id="change_username" @onclick="FinaliseAccNameChange"><span>@Lang.Instance["Modal_ChangeUsernameType", new {platform = AppData.CurrentSwitcher}]</span></button>
</div>

@code
{
    // Pressed Enter on the input
    private async Task KeyPress(KeyboardEventArgs k)
    {
        // If enter was pressed
        if (k.Key == "Enter")
        {
            // Change the username
            await FinaliseAccNameChange();
        }
    }

    // Clicked the Change Username button
    private async Task FinaliseAccNameChange()
    {
        AppData.SelectedAccount.NotifyDataChanged();

        if (AppData.CurrentSwitcher == "Steam")
            await SteamSwitcherFuncs.ChangeUsername();
        else
        {
            // Clean string if not a command string.
            if (AppData.SelectedAccount.DisplayName.Contains("TCNO:"))
                AppData.SelectedAccount.DisplayName = Regex.Replace(AppData.SelectedAccount.DisplayName, @"/[<>: \.\""\/\\|?*]/g", "-");

            await BasicSwitcherFuncs.ChangeUsername(AppData.SelectedAccountId, AppData.SelectedAccount.DisplayName);
        }
        ModalData.IsShown = false;
    }
}
