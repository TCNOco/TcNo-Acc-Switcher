@using Newtonsoft.Json.Linq
@using TcNo_Acc_Switcher_Globals
@using System.Collections.ObjectModel
@using System.Collections.Generic
@using System.Linq
@inject IJSRuntime Js

@code {
    [Parameter]
    public string ContextMenuId { get; set; }
    [Parameter]
    public ObservableCollection<MenuItem> MenuItems { get; set; }

    private List<MenuItem> _itemsSnapshot = new();

    protected override void OnInitialized()
    {
        if (MenuItems != null)
        {
            MenuItems.CollectionChanged += ((_, _) => 
            {
                // Update snapshot when collection changes
                try
                {
                    _itemsSnapshot = MenuItems.ToList();
                }
                catch
                {
                    // If collection was modified during ToList(), keep previous snapshot
                }
                InvokeAsync(StateHasChanged);
            });
            // Initialize snapshot
            try
            {
                _itemsSnapshot = MenuItems.ToList();
            }
            catch
            {
                _itemsSnapshot = new List<MenuItem>();
            }
        }
    }

    protected override void OnParametersSet()
    {
        // Update snapshot when parameters change
        if (MenuItems != null)
        {
            try
            {
                _itemsSnapshot = MenuItems.ToList();
            }
            catch
            {
                _itemsSnapshot = new List<MenuItem>();
            }
        }
        else
        {
            _itemsSnapshot = new List<MenuItem>();
        }
    }
}

<ul class="contextmenu" id="@ContextMenuId">
    @foreach (var item in _itemsSnapshot)
    {
        <ContextMenuItem Item="@item" Depth="0" />
    }
</ul>