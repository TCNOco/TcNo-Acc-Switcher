@using Newtonsoft.Json.Linq
@using TcNo_Acc_Switcher_Globals
@using System.Collections.ObjectModel
@using System.Collections.Specialized
@inject IJSRuntime Js
@implements IDisposable

@code {
    [Parameter]
    public string ContextMenuId { get; set; }
    [Parameter]
    public ObservableCollection<MenuItem> MenuItems { get; set; }

    private NotifyCollectionChangedEventHandler _menuItemsOnCollectionChanged;
    protected override void OnInitialized()
    {
        _menuItemsOnCollectionChanged = async (_, _) => await InvokeAsync(StateHasChanged);
        MenuItems.CollectionChanged += _menuItemsOnCollectionChanged;
    }

    void IDisposable.Dispose()
    {
        MenuItems.CollectionChanged += _menuItemsOnCollectionChanged;
    }


}

<ul class="contextmenu" id="@ContextMenuId" data-shown="false">
    @foreach (var item in MenuItems)
    {
        <ContextMenuItem Item="@item" Depth="0" />
    }
</ul>